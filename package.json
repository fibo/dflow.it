{
  "name": "dflow.it",
  "description": "Dataflow programming",
  "homepage": "https://dflow.it",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "flow-view": "github:fibo/flow-view",
    "lint-staged": "^10.4.2",
    "node-sass": "^4.14.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^5.0.2",
    "react-scripts": "4.0.0",
    "react-spring": "^8.0.27",
    "react-three-fiber": "^5.1.4",
    "remark-gfm": "^1.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "three": "^0.122.0",
    "typescript": "^4.0.5",
    "use-resize-observer": "^6.1.0",
    "zustand": "^3.1.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "eslint": "eslint src",
    "stylelint": "stylelint src/sass",
    "lint-staged": "lint-staged",
    "start": "react-scripts start",
    "tsc": "tsc",
    "test": "react-scripts test --watchAll=false"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 1
        }
      ],
      "no-unused-vars": "error",
      "no-var": "error",
      "react/jsx-key": "error"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.scss": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": "prettier --write"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "semi": false,
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "rules": {
      "max-nesting-depth": null,
      "scss/at-import-partial-extension-blacklist": null
    }
  }
}
